<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Registro de usuario</h3>
        </div>
        <div class="panel-body">
          <% resource.build_profile %>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <%= f.simple_fields_for :profile do |ff| %>
            <%= ff.input :name, label:'Nombre' %>
            <%= ff.input :lastname, label:'Apellido' %>
            <%= ff.input :document, label:'DNI' %>
            <%= ff.input :birthdate, label:'Fecha de nacimiento',
              as: :date_time_picker,
              input_html:
                { data:
                  {
                    date_format: "DD-MM-YYYY",
                    date_max_date: Time.current.strftime('%Y-%m-%d'),
                    date_view_mode: 'years',
                    date_default_date: 18.years.ago.strftime('%Y-%m-%d')
                  }
                }

            %>
          <% end %>

          <%= f.input :email, placeholder: 'user@domain.com' %>
          <%= f.input :password, placeholder: '******' %>
          <%= f.input :password_confirmation, placeholder: '******' %>

          <div class="actions">
            <%= f.button :submit, 'Regístrame!', class:false %>
          </div>

          <div class="actions">
            <%= f.submit "Regístrame!", class:'btn btn-lg btn-info btn-block' %>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
